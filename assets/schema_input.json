{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://raw.githubusercontent.com/nf-core/variantmtb/master/assets/schema_input.json",
    "title": "nf-core/variantmtb pipeline - params.input schema",
    "description": "Schema for the file provided with params.input",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "sample": {
                "type": "string",
                "pattern": "^\\S+$",
                "errorMessage": "Sample name must be provided and cannot contain spaces",
                "meta": ["id"]
            },
            "filename": {
                "type": "string",
                "format": "file-path",
                "exists": true,
                "pattern": "^\\S+\\.(vcf|vcf.gz|tsv)$",
                "errorMessage": "filename must be an existing VCF (for SNPs) or TSV (for CNAs) file"
            },
            "genome": {
                "type": "string",
                "enum": ["hg19", "GRCh37", "hg38", "GRCh38"],
                "errorMessage": "genome must be one of 'hg19', 'GRCh37', 'hg38' or 'GRCh38'",
                "meta": ["ref"]
            },
            "filetype": {
                "type": "string",
                "pattern": "(^mutations$)|(^cnas$)|(^translocations$)",
                "errorMessage": "the filetype must be one of 'mutations', 'cnas' or 'translocations'",
                "meta": ["filetype"]
            }
        },
        "required": ["sample", "filename", "filetype"]
    }
}
